# Volume and Media control keys
XF86Audio{Prev,Next,Play}
 playerctl {previous,next,play-pause} \
 pgrep dwmblocks > /dev/null 2>&1 && pkill -40 dwmblocks || exit 0

XF86Audio{Mute,LowerVolume,RaiseVolume}
 /usr/bin/amixer -D pipewire sset Master {togglemute,2%-,2%+} \
 pgrep dwmblocks > /dev/null 2>&1 && pkill -40 dwmblocks || exit 0

XF86MonBrightnessDown
		brightnessctl set 5%-

XF86MonBrightnessUp
		brightnessctl set 5%+
